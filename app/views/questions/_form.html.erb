<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages',object: f.object %>

  <div class="field">
    <%= f.label :operation_id %><br>
    <%= f.number_field :operation_id %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "次へ", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
